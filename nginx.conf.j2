server {
    listen 80;
    server_name 172.31.38.15;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        alias {{ /home/centos/jenkins-ansible-flask-1 }}/static;
    }

    location /uploads {
        alias {{ /home/centos/jenkins-ansible-flask-1 }}/uploads;
    }

    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root {{ /home/centos/jenkins-ansible-flask-1 }}/templates/;
    }
}